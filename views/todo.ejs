<%- include('header'); %>

    <body>
        <h1 class="heading">Welcome to Our Web</h1>
        <p class="tag">Add Your Today's Task And Complate Them</p>

        <div class="todo-container">
            <h2>To-Do List</h2>
            <div class="todo">
                <form action="/" method="POST" class="todo-header">
                    <input type="text" name="content" placeholder="Enter Your Task">
                    <button type="submit"><span class="fas fa-plus"></span></button>
                </form>
                <ul class="todo-list">
                    <% task.forEach(details => { %>
                        <li class="todo-list-item">
                            <div class="todo-list-item-name">
                                <%= details.content %>
                            </div>
                            <!-- <a href="/edit/<%= details._id %>" class="edit">
                                <span class="fas fa-edit"></span>
                            </a> -->
                            <a href="/remove/<%= details._id %>" class="remove">
                                <span class="fas fa-times"></span>
                            </a>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>

    </body>

    </html>